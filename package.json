{
  "name": "playwright-parameterized-user-example",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "e2e",
    "demo-app",
    "dashboard",
    "utils"
  ],
  "catalog": {
    "@biomejs/biome": "^2.3.6",
    "@playwright/test": "^1.56.1",
    "@types/bun": "^1.3.2",
    "@typescript/native-preview": "^7.0.0-dev.20251117.1",
    "@types/node": "^24.10.1",
    "arktype": "^2.1.27"
  },
  "trustedDependencies": [
    "@typescript/native-preview"
  ],
  "scripts": {
    "runDemo": "bun run runDemo.ts",
    "dashboard": "bun run --filter '@monorepo/dashboard' dev",
    "dev:app": "cd demo-app && bun run dev",
    "dev:app:production": "cd demo-app && bun run dev:production",
    "dev:app:staging": "cd demo-app && bun run dev:staging",
    "dev:app:development": "cd demo-app && bun run dev:development",
    "test": "cd e2e && bun run test",
    "test:ui": "cd e2e && bun run test:ui",
    "test:report": "cd e2e && bun run test:report",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "vet": "bun run --filter '*' vet"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.6",
    "@playwright/test": "^1.56.1",
    "@types/bun": "^1.3.2"
  },
  "peerDependencies": {
    "@typescript/native-preview": "^7.0.0-dev.20251117.1"
  },
  "dependencies": {
    "arktype": "^2.1.27"
  }
}
