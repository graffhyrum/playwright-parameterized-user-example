{
  "name": "playwright-parameterized-user-example",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": ["e2e", "demo-app", "dashboard"],
  "scripts": {
    "install:all": "bun install",
    "dashboard": "cd dashboard && bun --hot run dev",
    "dev:app": "cd demo-app && bun run dev",
    "dev:app:production": "cd demo-app && PORT=3000 NODE_ENV=production bun run dev",
    "dev:app:staging": "cd demo-app && PORT=3001 NODE_ENV=staging bun run dev",
    "dev:app:development": "cd demo-app && PORT=3002 NODE_ENV=development bun run dev",
    "test": "cd e2e && bun run test",
    "test:ui": "cd e2e && bun run test:ui",
    "test:report": "cd e2e && bun run report",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@playwright/test": "^1.56.1",
    "@types/bun": "^1.3.2"
  },
  "peerDependencies": {
    "@typescript/native-preview": "^7.0.0-dev.20251117.1"
  },
  "dependencies": {
    "arktype": "^2.1.27"
  }
}
