{
  "name": "playwright-parameterized-user-example",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "e2e",
    "demo-app",
    "dashboard",
    "utils"
  ],
  "trustedDependencies": [
    "@typescript/native-preview"
  ],
  "scripts": {
    "install": "bun run utils/src/run.ts installAll",
    "dashboard": "bun run utils/src/run.ts dashboard",
    "dev:app": "bun run utils/src/run.ts devApp",
    "dev:app:production": "bun run utils/src/run.ts devApp production",
    "dev:app:staging": "bun run utils/src/run.ts devApp staging",
    "dev:app:development": "bun run utils/src/run.ts devApp development",
    "test": "bun run utils/src/run.ts testFromRoot",
    "test:ui": "bun run utils/src/run.ts testUiFromRoot",
    "test:report": "bun run utils/src/run.ts testReportFromRoot",
    "lint": "bun run utils/src/run.ts lintWorkspace",
    "lint:fix": "bun run utils/src/run.ts lintFixWorkspace",
    "format": "bun run utils/src/run.ts formatWorkspace"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@playwright/test": "^1.56.1",
    "@types/bun": "^1.3.2"
  },
  "peerDependencies": {
    "@typescript/native-preview": "^7.0.0-dev.20251117.1"
  },
  "dependencies": {
    "arktype": "^2.1.27"
  }
}
